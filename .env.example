# ============================================
# Byaboneka+ Production Environment
# Copy to .env and fill in real values
# ============================================

# Database
DB_USER=byaboneka
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=byaboneka_plus

# JWT (minimum 32 characters each — generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS — set to your frontend domain
CORS_ORIGIN=https://byaboneka.rw,https://www.byaboneka.rw

# Frontend API URL — must be accessible from user's browser
VITE_API_URL=https://api.byaboneka.rw/api/v1

# Email — Brevo SMTP (free: 300 emails/day)
# Sign up: https://www.brevo.com → SMTP & API → SMTP Settings
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=a294a1001@smtp-brevo.com
BREVO_SMTP_KEY=your_brevo_smtp_master_password
EMAIL_FROM=Byaboneka+ <noreply@byaboneka.rw>
FRONTEND_URL=http://localhost:3000

# Google reCAPTCHA v3 (invisible)
# Get keys: https://www.google.com/recaptcha/admin → v3
RECAPTCHA_SECRET_KEY=
VITE_RECAPTCHA_SITE_KEY=
