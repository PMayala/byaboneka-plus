{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",  // Set to project root for tests (includes both src and tests)
    "types": ["jest", "node"],  // Explicitly include Jest and Node types for tests
    "noEmit": true,  // Prevent emitting JS/declarations for tests
    "declaration": false,  // Override inherited declaration settings
    "declarationMap": false,
    "sourceMap": false
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}